    "fastify": "^5.6.2",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.0.0",
    "handlebars": "^4.7.8",
    "jwt-decode": "^4.0.0",
    "lodash-es": "^4.17.21",
    "node-vault": "^0.10.9",
    "openai": "^6.15.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
